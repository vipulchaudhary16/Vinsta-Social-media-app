<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/storyImage"
        android:layout_width="@dimen/_130mdp"
        android:layout_height="@dimen/_85mdp"
        android:layout_marginEnd="7dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_border_color="#333333"
        app:riv_border_width="2dip"
        app:riv_corner_radius="15dip"
        app:riv_mutate_background="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_in_story"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/storyImage"
        app:layout_constraintTop_toTopOf="@+id/storyImage" />

    <com.devlomi.circularstatusview.CircularStatusView
        android:id="@+id/storyCircleView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/profile_image_in_story"
        app:layout_constraintEnd_toEndOf="@id/profile_image_in_story"
        app:layout_constraintStart_toStartOf="@id/profile_image_in_story"
        app:layout_constraintTop_toTopOf="@+id/profile_image_in_story"
        app:portion_color="@color/orange"
        app:portion_spacing="5dp"
        app:portion_width="2dp"
        app:portions_count="4" />


    <TextView
        android:id="@+id/username_in_storyCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="3dp"
        android:padding="4dp"
        android:text="@string/vipul_class"
        android:background="@drawable/username_bg"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/storyImage"
        app:layout_constraintStart_toStartOf="@+id/storyImage" />

</androidx.constraintlayout.widget.ConstraintLayout>